                    <!-- Combined Disclaimer Section -->
                    <div id="disclaimer-section" class="disclaimer-container" style="
                        background: linear-gradient(135deg, #1e293b 0%, #374151 100%);
                        border-radius: 8px;
                        margin-bottom: 24px;
                        overflow: hidden;
